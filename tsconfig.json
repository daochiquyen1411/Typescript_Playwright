{
  "compilerOptions": {
    "module": "es2022",      // or "node16" / "nodenext" / "es2022"
    "target": "es2022",      // or higher
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"],
      "@pages/*": ["demo/pages/*"],
      "@utils/*": ["lib/utils/*"],
      "@factory/*": ["lib/factory/*"],
      "@fixtures/*": ["lib/fixtures/*"],
      "@helpers/*": ["lib/helpers/*"]
    }
  },
  "include": [
    "demo/tests/**/*",
    "lib/**/*"
, "demo/pages", "demo/fixtures"  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
}